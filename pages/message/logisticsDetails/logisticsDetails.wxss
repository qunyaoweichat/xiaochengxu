.item{
    padding: 14px 16px ;
    background-color: #fff;
    border-bottom: 1px solid #d9d9d9;
    border-top: 1px solid #d9d9d9;
}
.item .pic image{
    float: left;
    width: 50px;
    height: 50px;
}
.item .list{
    padding-left: 60px;
}
.item .list view{
    overflow: hidden;
    font-size: 12px;
    color: #666;
    height: 1.5em;
    line-height: 1.5em;
}

/* 物流 */
.logistics{
    width: 100%;
    overflow: hidden;
    border-top: 1px solid #d9d9d9;
    background-color: #fff;
    margin-top: 10px;
}
.logistics .title{
    display: block;
     border-bottom: 1px solid #d9d9d9;
     padding: 0 14px;
     line-height: 45px;
}
.logistics .gz{
    position: relative;
    display: block;
    border-bottom: 1px solid #d9d9d9;
    padding: 15px 10px 15px 0;
    margin-left: 40px;
}
.logistics .gz text{
    display: block;
    color: #888;
    line-height: 24px;
    font-size: 14px;
}
.logistics .gz .time{
    font-size: 12px;
}
.logistics .gz::after{
    content: '';
    position: absolute;
    left: -25px;
    top: 20px;
    height: 10px;
    width: 10px;
    border-radius: 10px;
    background-color: #ccc;
}
.logistics .gz::before{
    content: '';
    position: absolute;
    left: -21px;
    top: 30px;
    height: 100%;
    width: 1px;
    background-color: #ccc;
}