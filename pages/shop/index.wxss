.shop-mode .banner{
     height: 200px; 
}
.shop-mode .banner image{
    width: 100%;
    height: 100%;
    vertical-align: middle
}

.shop-mode .avatar image{
    width: 80px;
    height: 80px;
}
.shop-mode .mode1 {
    position: relative;
    background: #fff;
}
.shop-mode .mode1 .avatar{
    position: absolute;
    border: 1px solid #ddd;
    background: #fff;
    padding: 2px;
    left: 15px;
    bottom: 15px;
}
.shop-mode .mode1 .list{
    display: flex;
    margin-left: 120px;
    padding: 10px 0;
}
.shop-mode .mode1 .list .item{
    flex: 1;
    text-align: center;
    font-size: 12px;
    line-height: 1.5;
    border-right: 1px solid #ddd;
    
}
.shop-mode .mode1 .list .item:last-child{
    border: none;
}

.shop-mode .mode2{
    background: #fff;
    height: 60px;
    position: relative;
}
.shop-mode .mode2 .avatar .avatar-wrap{
    display: inline-block;
    border-radius: 50%;
    padding: 3px;
    border: 1px solid  #ddd;
    overflow: hidden;
    background: #fff;
    width: 80px;
    height: 80px;
}
.shop-mode .mode2 .avatar .avatar-wrap image{
    border-radius: 50%;
}
.shop-mode .mode2 .inner{
    position: absolute;
    width: 100%;
    bottom: 5px;
    display: flex;
    align-items: center;
}
.shop-mode .mode2 .icon{
    display: inline-block;
    background: #fff;
    width: 40px;
    height: 40px;
    line-height: 36px;
    border-radius: 50%;
    margin-bottom: 7px;
    border: 1px solid #ddd
}
.shop-mode .mode2 .icon .iconfont{
     font-size: 24px;
     color: #1aad19;
}

.shop-mode .mode2 .inner>view{
    flex: 1;
    text-align: center;
}
.shop-mode .mode2 .collector .iconfont {
    color: #eeb924
}
.shop-mode .mode2 .share .icon{
    position: relative
}
.shop-mode .mode2 .share button{
    position: absolute;
    left: 0;
    top: 0;
    font-size: 12px;
    opacity: 0;
}

/* 优惠券 */
.shop-mode .cards-list{
    display: flex;
    padding: 10px 0;
    background: #fff;
    margin-bottom: 10px;
}
.shop-mode .cards-list .inner{
    flex: 1;
    text-align: center;
    padding: 3% 0;
    margin: 0 5px;
    border-radius: 7px;
}
.shop-mode .cards-list .inner:nth-child(1){
    color: #e05866;
    border: 1px solid #dac5cc;
    background: #ffebed;
}
.shop-mode .cards-list .inner:nth-child(2){
    color: #69ac79;
    border: 1px solid #ced4c6;
    background: #f5fdee;
}
.shop-mode .cards-list .inner .price{
    font-size: 22px;
    line-height: 1.3;
}
.shop-mode .cards-list .inner .text{
    font-size: 14px;
}







.shop-hd{
    background: #fff;
    padding: 10px;
}
.shop-hd .c1{
    float: left;
    font-size: 15px;
}
.shop-hd .c1 image{
    width: 30px;
    height: 30px;
    vertical-align: middle;
    margin-right: 10px;
    border-radius: 50%;
}
.shop-hd .c2{
    float: right;
    line-height: 30px;
}
.shop-news{
    background: #fff;
    margin-top: 1px;
    height: 40px;
    line-height: 40px;
}
.shop-news .a{
    padding: 0 10px;
}
.shop-news .text{
    font-size: 15px;
}
.shop-news .iconfont{
    float: right;
}
.shopIndex-cover{
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.01);
    z-index: 9;
}


/* 关闭的店铺 */
.shop-closed {
    padding-top: 30%;
    text-align: center;
}
.shop-closed .pic image{
    width: 40%;
}
.shop-closed .title{
    font-size: 18px;
    font-weight:bold;
    line-height:30px;
}
.shop-closed .text{
    color: #666;
    line-height: 30px;
}
