.shop-mode .banner{
     height: 200px; 
}
.shop-mode .banner image{
    width: 100%;
    height: 100%;
}

.shop-mode .avatar image{
    width: 80px;
    height: 80px;
}
.shop-mode .mode1 {
    position: relative;
    background: #fff;
}
.shop-mode .mode1 .avatar{
    position: absolute;
    border: 1px solid #ddd;
    background: #fff;
    padding: 2px;
    left: 15px;
    bottom: 15px;
}
.shop-mode .mode1 .list{
    display: flex;
    margin-left: 120px;
    padding: 10px 0;
}
.shop-mode .mode1 .list .item{
    flex: 1;
    text-align: center;
    font-size: 12px;
    line-height: 1.5;
    border-right: 1px solid #ddd;
    
}
.shop-mode .mode1 .list .item:last-child{
    border: none;
}

.shop-mode .mode2{
    background: #fff;
    height: 60px;
    position: relative;
}
.shop-mode .mode2 .avatar .avatar-wrap{
    display: inline-block;
    border-radius: 50%;
    padding: 3px;
    border: 1px solid  #ddd;
    overflow: hidden;
    background: #fff;
    width: 80px;
    height: 80px;
}
.shop-mode .mode2 .avatar .avatar-wrap image{
    border-radius: 50%;
}
.shop-mode .mode2 .inner{
    position: absolute;
    width: 100%;
    bottom: 5px;
    display: flex;
    align-items: center;
}
.shop-mode .mode2 .icon{
    display: inline-block;
    background: #fff;
    width: 40px;
    height: 40px;
    line-height: 36px;
    border-radius: 50%;
    margin-bottom: 7px;
    border: 1px solid #ddd
}
.shop-mode .mode2 .icon .iconfont{
     font-size: 24px;
     color: #1aad19;
}

.shop-mode .mode2 .inner>view{
    flex: 1;
    text-align: center;
}
.shop-mode .mode2 .collector .iconfont {
    color: #eeb924
}
.shop-mode .mode2 .share .icon{
    position: relative
}
.shop-mode .mode2 .share button{
    position: absolute;
    left: 0;
    top: 0;
    font-size: 12px;
    opacity: 0;
}

/* 优惠券 */
.shop-mode .cards-list{
    display: flex;
    padding: 10px 0;
    background: #fff;
    margin-bottom: 10px;
}
.shop-mode .cards-list .inner{
    flex: 1;
    text-align: center;
    padding: 3% 0;
    margin: 0 5px;
    border-radius: 7px;
}
.shop-mode .cards-list .inner:nth-child(1){
    color: #e05866;
    border: 1px solid #dac5cc;
    background: #ffebed;
}
.shop-mode .cards-list .inner:nth-child(2){
    color: #69ac79;
    border: 1px solid #ced4c6;
    background: #f5fdee;
}
.shop-mode .cards-list .inner .price{
    font-size: 22px;
    line-height: 1.3;
}
.shop-mode .cards-list .inner .text{
    font-size: 14px;
}







.shop-hd{
    background: #fff;
    padding: 10px;
}
.shop-hd .c1{
    float: left;
    font-size: 15px;
}
.shop-hd .c1 image{
    width: 30px;
    height: 30px;
    vertical-align: middle;
    margin-right: 10px;
    border-radius: 50%;
}
.shop-hd .c2{
    float: right;
    line-height: 30px;
}
.shop-news{
    background: #fff;
    margin-top: 1px;
    height: 40px;
    line-height: 40px;
}
.shop-news .a{
    padding: 0 10px;
}
.shop-news .text{
    font-size: 15px;
}
.shop-news .iconfont{
    float: right;
}
.shopIndex-cover{
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.01);
    z-index: 9;
}


/* 关闭的店铺 */
.shop-closed {
    padding-top: 30%;
    text-align: center;
}
.shop-closed .pic image{
    width: 40%;
}
.shop-closed .title{
    font-size: 18px;
    font-weight:bold;
    line-height:30px;
}
.shop-closed .text{
    color: #666;
    line-height: 30px;
}

/* 新加的模板5 */
.shop-tpl5 .search{
    position: relative;
    background-color: #fff;
    border-bottom: 1px solid #d9d9d9;
    height: 30px;
    padding: 8px 50px 7px;
}
.shop-tpl5 .search .cover{
    position: absolute;
    left: 8px;
    top: 8px;
    width: 30px;
    height: 30px;
}
.shop-tpl5 .search .cover image{
    width: 30px;
    height: 30px;
    border-radius: 50%;
}
.shop-tpl5 .search .section{
    position: relative;
    padding: 0px 35px;
    width: 100%;
    height: 100%;
    -webkit-border-radius: 4px;
    border-radius: 4px;
    overflow: hidden;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    background: #f2f2f2
}
.shop-tpl5 .search .section .iconfont{
    position: absolute;
    top: 5px;
    left: 7px;
    font-size: 18px;
    color: #CDCCCC;
}
.shop-tpl5 .search .section input{
    background-color: #F2F2F2;
    height: 32px;
    color: #999;
}
.shop-tpl5 .search .fadein{
    position: absolute;
    right: 0px;
    top: 0px;
    width: 50px;
    line-height: 50px;
    text-align: center;
}
.shop-tpl5 .search .fadein text{
    font-size: 28px;
    color: #515151;
    
}
/* 导航滚动 */
.shop-tpl5 .scroll-nav .row{
    padding: 0 8px;
    width: 100%;
    overflow-y: scroll;
    background-color: #fff;
    white-space: nowrap;
    line-height: 40px;
    color: #727272;
}
.shop-tpl5 .scroll-nav .row::-webkit-scrollbar {
    display: none;
}
.shop-tpl5 .scroll-nav .row  text{
    padding: 0 10px;
    display: inline-block;
    border-bottom: solid 3px #fff; 
}
.shop-tpl5 .scroll-nav .row .scroll-selected{
    color: #1196DA;
    border-bottom: solid 3px #1196DA;
}

/* 图片滚动 */
.shop-tpl5 .slider image{
    width: 100%;
}

/* 广告 */
.shop-tpl5 .push{
    margin-top: 10px;
    padding:10px 2%;
    background-color: #fff;
    display: flex;
}
.shop-tpl5 .push .inner{
    flex: 1;
}
.shop-tpl5 .push .inner image{
    width: 100%;
}
.shop-tpl5 .push .inner:first-child{
    margin-right:2%;
}
.shop-tpl5 .push .inner .top{
    margin-bottom: 2%;
}
.shop-tpl5 .push .inner .top,
.shop-tpl5 .push .inner .bottom{
    height: 49%;
}


/* 首页推荐的 */
.shop-tpl5 .recommend{
    margin-top: 10px;
    background-color: #fff;
}
.shop-tpl5 .recommend .title{
    padding: 15px 0;
    font-size: 16px;
    text-align: center;
    color: #333333;
}
.shop-tpl5 .recommend .row{
    margin: 0 1% 2%;
}
.shop-tpl5 .recommend .row .item{
    width: 50%;  
    float: left;
    padding-bottom: 10px;  
}
.shop-tpl5 .recommend .row .item navigator{
    margin: 0 3%
}
.shop-tpl5 .recommend .row .item .cover{
    background-size: cover;
    background-position: 50% 50%;
    background-repeat: no-repeat;
    position: relative;
    width: 100%;
    padding-top: 100%;  
}
.shop-tpl5 .recommend .row .item .name{
    height: 38px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
    color: #333333;
    margin-top: 5px;
    line-height: 19px;
    margin-bottom: 3px;
    padding: 0 4px;
}
.shop-tpl5 .recommend .row .item .price{
    color: #A0141C;
    line-height: 25px;
    font-size: 14px;
}
.shop-tpl5 .recommend .row .item .price .now{
    font-size: 18px;
}
.shop-tpl5 .recommend .row .item .price .expire{
    text-decoration: line-through;
    color: #B3B3B3;
    margin-left: 5px;
    font-size: 14px;
}
.shop-tpl5 .recommend .row .item .time-limit{
    color: #fff;
    font-size: 12px;
    padding: 2px 4px;
    border-radius: 2px;
    background-color: #CB3D38;
    margin: 0 4px;
}
.shop-tpl5 .recommend  .more{
    line-height: 40px;
    font-size: 16px;
    color: #D81E06;
    text-align: center;
    padding-bottom: 2.31%;
}
.shop-tpl5 .recommend .more image{
    width: 25px;
    height: 25px;
    margin-left: 5px;
}