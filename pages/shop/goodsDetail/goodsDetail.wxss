@import "../../../utils/wxParse/wxParse.wxss";
.tabBar .tabBar-item {
    flex: 2;
}

.tabBar .tabBar-item.btn {
    flex: 3;
    height: 44px;
    line-height: 44px;
    background: #1aad19;
    margin: 0;
    padding: 4px 0;
    color: #fff;
}

.tabBar .tabBar-item.btn-buy {
    background: #f80;
}

swiper {

    height: 350px;
}

swiper image {
    width: 100%;
    height: 100%;
}
swiper .buy{
    position: absolute;
    display: inline-block;
    right: 10px;
    top: 10px;  
}
swiper .buy image{
    width: 37px;
    height: 37px;
}


.item {
    background: #fff;
    margin-bottom: 15px;
    padding: 14px;
}

.goods-name {
    line-height: 24px;
    font-size: 14px;
}

.goods-infor {
    background: #f80;
    color: #fff;
    line-height: 32px;
}

.goods-infor .num {
    float: right;
    font-size: 12px;
}

.goods-num .iconfont {
    float: right;
}

.goods-num .num {
    margin-left: 10px;
}

.goods-num .desc {
    color: #666;
}

.goods-promise .title {
    line-height: 30px;
    font-size: 15px;
    margin-bottom: 10px;
}

.goods-promise .list {
    display: flex;
    flex-wrap: wrap;
}

.goods-promise .list>view {
    line-height: 30px;
    width: 33.3%;
}

.goods-promise .list .iconfont {
    font-size: 20px;
    margin-right: 5px;
    color: #f80;
}

.goods-component {
    margin-top: -14px;
    
}
.goods-component view{
    height: 34px;
    line-height: 34px;
}
.goods-component view text:nth-child(1) {
    float: left;
    width: 80px;
    color: #555;
}

.goods-comment .title {
    line-height: 30px;
    padding-bottom: 5px;
    border-bottom: 1px solid #ddd;
}

.goods-comment .title .fr {
    float: right;
}

.goods-comment .title .text {
    font-size: 16px;
}

.goods-comment .comment-list {
    padding: 14px 0px;
    border-bottom: 1px solid #ddd;
}

.goods-comment .comment-list:last-child {
    border: none;
}

.goods-comment .comment-list .avatar {
    float: left;
    margin-top: 10px;
}

.goods-comment .comment-list .avatar image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
}

.goods-comment .comment-list .comment-con {
    margin-left: 60px;
}

.goods-comment .comment-list .hd {
    height: 30px;
    line-height: 30px;
}

.goods-comment .comment-list .hd .username {
    float: right;
}

.goods-comment .comment-list .hd .iconfont {
    font-size: 14px;
    margin-right: 5px;
    color: #999;
}

.goods-comment .comment-list .hd .iconfont.on {
    color: #f80;
}

.goods-comment .comment-list .bd {
    color: #666;
    line-height: 24px;
}

.shop-infor {
    position: relative;
}

.shop-infor navigator {
    display: flex;
    align-items: center;
}

.shop-infor .shop-avatar {
    margin-right: 10px;
    flex: 2;
}

.shop-infor .shop-avatar image {
    width: 50px;
    height: 50px;
}

.shop-infor .shop-avatar .iconfont {
    float: right;
}

.shop-infor .shop-detail {
    flex: 7;
    line-height: 30px;
}

.shop-infor .shop-detail text {
    margin-right: 10px;
    font-size: 12px;
    color: #666;
}

.shop-infor .arr {
    position: absolute;
    right: 10px;
    top: 50%;
    margin-top: -12px;
}

.goods-tabs {
    background: #fff;
}

.goods-tabs .tabs-hd {
    display: flex;
}

.goods-tabs .tabs-hd view {
    flex: 1;
    height: 44px;
    line-height: 44px;
    text-align: center;
    border-bottom: 1px solid #ddd;
    font-size: 16px;
}

.goods-tabs .tabs-hd .on {
    color: #1aad19;
    border-bottom: 1px solid #1aad19;
}

.goods-tabs .tabs-bd {
    padding: 14px;
    line-height: 24px;
}
.goods-tabs .tabs-bd image{
    max-width: 100%;
}
.select-goods {
    position: fixed;
    width: 100%;
    height: 100%;
    bottom: 0;
    left: 0;
   
    z-index: 10;
}
.select-goods .cover{
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 1;
    background: rgba(0, 0, 0, 0.8);
}
.select-goods view{
    overflow: visible;
}
.select-goods-inner {
    position: absolute;
    z-index: 2;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #fff;
    
}

.select-goods-main {
    padding: 15px;
}
.select-goods .btn{
    height: 44px;
    line-height: 44px;
    background: #1aad19;
    text-align: center;
    color: #fff;
    font-size: 18px;
}
.select-goods .goods-pic {
    width: 100px;
    height: 100px;
    margin-top: -40px;
}

.select-goods .goods-pic image {
    width: 100%;
    height: 100%;
}

.select-goods .title {
    margin: 10px 0;
}

.select-goods .change-num {
    padding:0 8px;
    line-height: 30px;
    display: inline-block;
    border: 1px solid #ddd;
}

.select-goods .change-num input {
    display: inline-block;
    width: 40px;
    vertical-align: middle;
    text-align: center;
    border-left: 1px solid #ddd;
    border-right: 1px solid #ddd;
    margin: 0 8px;
}

.select-goods .change-num .iconfont {
    color: #000;
}
.select-goods .sku-list text{
    display: inline-block;
    line-height: 26px;
    height: 26px;
    padding: 0 7px;
    border: 1px solid #ddd;
    margin-right: 10px;
    font-size: 12px;
    color: #999
}
.select-goods .sku-list text.on{
    border-color: #1aad19
}