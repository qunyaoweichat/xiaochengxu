.seller{
    margin-top: 10px;
    padding: 0 10px;
    line-height: 45px;
    background-color: #fff;
    border-bottom: 1px solid #ddd;
    border-top: 1px solid #ddd;  
}
.seller navigator{
    border: 1px solid #fc4106;
