.cropper{
    position: absolute;
    top: 0;
    left: 0;
}

.cropper-buttons{
    position: absolute;
    bottom: 0;
    z-index: 1;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.95);
    color: #04b00f;
}
.cropper-buttons{
    padding: 20px 0;
}
.cropper-buttons view{
    display: inline-block;
    width: 50%;
}
.cropper-buttons view button{
    width: 80%;
    margin: auto;
    line-height: 40px;
    font-size: 12px;
}