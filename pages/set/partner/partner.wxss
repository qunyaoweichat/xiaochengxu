.item{
    margin-top: 10px;
    padding: 10px;
    background-color: #fff;
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
}
.item .pic image{
    float: left;
    height: 50px;
    width: 50px;
    margin-right: 10px;
    border-radius: 50px;
}
.item .row1{
    line-height: 25px;
}
.item .row1 .name{
   font-size: 16px;
}
.item .row1 .back-money{
    float: right;
    font-size: 12px;
}

.item .row2{
    line-height: 25px;
}
.item .row2 text{
    color: #c00;
}
