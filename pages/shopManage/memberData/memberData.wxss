/* 会员资料*/
.member-data .data{
    border-top: solid 1px #f6f6f6;
    background-color: #FFFFFF;
    padding: 15px;
}
.member-data .data .pic{
    float: left;
    width: 70px;
    height: 70px;
}
.member-data .data .pic image{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.member-data .data .text{
    padding-left: 80px;
    line-height: 70px;
    font-size: 16px;
    font-weight: bold;
}
.member-data .index-num {
	text-align: center;
	background-color: #fff;
	margin: 1px 0 0;
}
.member-data .index-num .row {
	display: flex;
	padding: 15px 0;
}

.member-data .index-num .row .list {
	flex: 1;
	list-style: none;
	position: relative;
}

.member-data .index-num .row .list:after {
	content: '';
	position: absolute;
	height: 40px;
	width: 1px;
	top: 10px;
	right: -2px;
	background-color: #c0d9f5;
}

.member-data .index-num .row .list:last-child:after {
	background: none;
}

.member-data .index-num .row .list .item {
	margin: 0;
}

.member-data .index-num .row .list .item:first-child {
	font-size: 14px;
	margin: 5px 0;
}
.member-data .title{
    padding: 15px 12px;
    font-size: 16px;
}
.member-data .item{
    background-color: #fff;
}
.member-data .item .list{
    position: relative;
    padding: 0 12px;
    line-height: 50px;
    border-bottom: 1px solid #F3F5F7;
}
.member-data .item .list .lf{
    float: left;
}
.member-data .item .list .rg{
    float: right;
}
.member-data  .tag{
    background-color: #fff;
    padding: 7px 12px;
}
.member-data  .tag{
    background-color: #fff;
    padding: 7px 12px;
}
.member-data .tag .iconfont{
    float: right;
    line-height: 40px;
}
.member-data .tag .inner{
    padding-right: 30px;
}
.member-data .tag .inner view{
    float: left;
    padding: 0 10px;
    line-height: 30px;
    border: solid 1px #BBBBBB;
    border-radius: 4px;
    margin-right: 10px;
    margin-top: 5px;
    margin-bottom: 5px;
}


