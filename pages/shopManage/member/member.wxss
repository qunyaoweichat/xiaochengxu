/* pages/shopManage/member/member.wxss */
.member .index-num {
	text-align: center;
	background-color: #fff;
	margin: 1px 0 8px;
}

.member .index-num .row {
	display: flex;
	padding: 15px 0;
}

.member .index-num .row .list {
	flex: 1;
	list-style: none;
	position: relative;
}

.member .index-num .row .list:after {
	content: '';
	position: absolute;
	height: 40px;
	width: 1px;
	top: 5px;
	right: -2px;
	background-color: #c0d9f5;
}

.member .index-num .row .list:last-child:after {
	background: none;
}

.member .index-num .row .list .item {
	margin: 0;
}

.member .index-num .row .list .item:first-child {
	font-size: 14px;
	margin: 5px 0;
}

.member .withdrawals{
	margin-top: 15px;
	background-color: #fff;
    padding: 0;
}
.member .withdrawals .bank{
    position: relative;
	padding: 15px;
	border-bottom: solid 1px #f6f6f6;
    margin-bottom: 0;
}
.member .withdrawals .bank navigator{
    display: inline-block;
}
.member  .withdrawals .bank .pic{
	float: left;
    width: 60px;
    height: 60px;
    border-radius:50%;
}
.member .withdrawals .bank .pic image{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.member .withdrawals .bank .iconfont{
    position: absolute;
    top: 0;
    right: 15px;
    line-height: 90px;
    width: 20px;
}
.member .withdrawals .bank .grade {
	float: right;
	width: 30px;
	padding-top: 18px;
}
.member .withdrawals .bank .grade image{
	width: 30px;
}
.member .withdrawals .bank .inner{
    padding-left: 70px;
    padding-right: 20px;
}
.member .withdrawals .bank .inner .c1{
    margin-top: 8px;
}
.member .withdrawals .bank .inner .c2{
    margin-top: 10px;
}
