.shop-balance .index-head{
    background-color: #1196DA;
    color: #fff;
}
.shop-balance .index-head .inner{
    padding: 16px;
}
.shop-balance .index-head .inner .money{
    font-size: 30px;
    margin: 10px 0 0;
}
.shop-balance .item{
    margin-top: 15px;
    background-color: #fff;
    display: flex;
}
.shop-balance .item view{
    flex: 1;
    padding: 15px;
    text-align: center;
    border-right: solid #f3f5f7 1px;
}
.shop-balance .item view navigator{
    display: inline-block;
}
.shop-balance .index-num {
	text-align: center;
	background-color: #fff;
	margin: 1px 0 0;
}
.shop-balance .index-num .row {
	display: flex;
	padding: 15px 0;
    text-align: center;
}

.shop-balance .index-num .row .list {
	flex: 1;
	list-style: none;
	position: relative;
}

.shop-balance .index-num .row .list:after {
	content: '';
	position: absolute;
	height: 40px;
	width: 1px;
	top: 10px;
	right: -2px;
	background-color: #c0d9f5;
}

.shop-balance .index-num .row .list:last-child:after {
	background: none;
}

.shop-balance .index-num .row .list .top-num {
	margin: 0;
}

.shop-balance .index-num .row .list .top-num:first-child {
	font-size: 14px;
	margin: 5px 0;
}