/* 物流 */
.order-logistics .logistics-list{
    padding: 0;
}
.order-logistics .logistics-list .gz{
    position: relative;
    display: block;
    border-bottom: 1px solid #d9d9d9;
    padding: 15px 10px 15px 0;
    margin-left: 40px;
}
.order-logistics .logistics-list .gz::before{
    content: '';
    position: absolute;
    left: -21px;
    top: 30px;
    height: 100%;
    width: 1px;
    background-color: #ccc;
}
.order-logistics .logistics-list .gz:last-child::before{
    width: 0;
}
.order-logistics .logistics-list .gz .time{
    font-size: 12px;
}
.order-logistics .logistics-list .gz::after{
    content: '';
    position: absolute;
    left: -25px;
    top: 20px;
    height: 10px;
    width: 10px;
    border-radius: 10px;
    background-color: #ccc;
}
.order-logistics .logistics-list .gz:last-child{
    border-bottom: none;
}