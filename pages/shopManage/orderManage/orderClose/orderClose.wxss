.order-close .title{
    height: 40px;
    line-height: 40px;
    padding: 0 15px;
    font-size: 16px;
    padding-top: 10px;
}   
.order-close .reason{
    padding-left:16px;
    background-color:#fff;
    border-bottom:1px solid #ddd;
    border-top: 1px solid #ddd;
}
.order-close .reason view{
    padding-right:10px;
    display:block;
    line-height:45px;
    border-bottom:1px solid #ddd;
}
.order-close .reason view:last-child{
    border-bottom: none;
}
.order-close .reason view text{
    float:right;
    font-weight:bold;
    font-size:22px;
    color:#007aff;
}
.order-close .order-manage-list,
.order-close .order-manage-list .shop-item{
    margin-top: 0px;
}