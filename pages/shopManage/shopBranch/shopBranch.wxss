/* 直属分店 */
.shop-branch .index-num {
	text-align: center;
	background-color: #fff;
	margin: 1px 0 8px;
}

.shop-branch .index-num .row {
	display: flex;
	padding: 15px 0;
}

.shop-branch .index-num .row .list {
	flex: 1;
	list-style: none;
	position: relative;
}

.shop-branch .index-num .row .list:after {
	content: '';
	position: absolute;
	height: 40px;
	width: 1px;
	top: 5px;
	right: -2px;
	background-color: #c0d9f5;
}

.shop-branch .index-num .row .list:last-child:after {
	background: none;
}

.shop-branch .index-num .row .list .item {
	margin: 0;
}

.shop-branch .index-num .row .list .item:first-child {
	font-size: 14px;
	margin: 5px 0;
}
.shop-branch .withdrawals{
	margin-top: 15px;
	background-color: #fff;
    padding: 0;
}
.shop-branch .withdrawals .bank{
	padding: 10px 15px;
	border-bottom: solid 1px #f6f6f6;
	margin-bottom: 0;
}
.shop-branch  .withdrawals .bank .pic{
	float: left;
    width: 60px;
    height: 60px;
    border-radius:50%;
}
.shop-branch .withdrawals .bank .pic image{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.shop-branch .withdrawals .bank .grade {
	float: right;
	width: 30px;
	padding-top: 18px;
}
.shop-branch .withdrawals .bank .grade image{
	width: 30px;
}
.shop-branch .withdrawals .bank .inner{
    padding-left: 70px;
    padding-right: 20px;
}
.shop-branch .withdrawals .bank .inner .c1{
    margin-top: 8px;
}
.shop-branch .withdrawals .bank .inner .c2{
    margin-top: 10px;
}
.shop-branch .withdrawals .foot{
	padding:10px  12px;
}
.shop-branch .withdrawals .foot text:last-child{
	float: right;
}