.coupon-list {
    margin: 15px;
}
.coupon-list .company-name{
    text-align: right;
    margin-bottom: 15px;
}
.coupon-list .company-name navigator{
    display: inline-block;
    padding: 5px 18px;
    color: #60a031;
    font-size: 12px;
    border: 1px solid #60a031;
    border-radius: 5px;
    -webkit-border-radius: 5px;
}
.coupon-list .item{
    position: relative;
    margin-bottom: 20px;
}
.coupon-list image{
    width: 100%
}
.coupon-list .content{
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    display: flex;
    align-items: center;
}
.coupon-list .content .c1{
    width: 130px;
    text-align: center;
    color:#60a031;
    padding: 0 5px;
    min-width: 0;
}

.coupon-list .content .c1 .price{
    font-size: 20px;
    overflow: hidden;
    align-items:center;
}
.coupon-list .content .c1 .price text{
    font-size: 40px;
    vertical-align: -5px;
    min-width: 0;
}
.coupon-list .content .c1 .desc{
    font-size: 12px;
    overflow: hidden;
    width: 100%;
}
.coupon-list .content .c2{
    min-width: 0;
    align-items:center;
    padding-left: 10px;
    border-left: 1px dotted #999; 

}
.coupon-list .content .c2 .r1{
    color:#60a031;
    margin-bottom: 5px;
}
.coupon-list .content .c2 view{
    white-space: nowrap;
    line-height: 23px;
    color: #666;
    font-size: 12px;
    width: 100%;
    overflow: hidden;
}
.coupon-list .content .c2 .r1{
    font-size: 20px;
}