page{
    padding-bottom: 50px;
}
.shop-infor {
    background: #fff;
    line-height: 30px;
    padding: 5px 10px 5px 7px;
    border-bottom: 1px solid #ddd;

}
.shop-infor checkbox {
    float: left;
    margin-left: 0px;
}
.shop-infor navigator{
    float: left;
    margin-left: 10px
}
.shop-infor .edt{
    float: right
}
.shop-infor image {
    width: 30px;
    height: 30px;
    vertical-align: middle;
    border-radius: 50%;
    margin-right: 10px;
}
.shop-infor .iconfont {
    margin-left: 10px;
    font-size: 14px;
}

.order-list .checkbox {
    float: left;
    margin-top: 30px;
    width: 40px;
    text-align: center;
}
.order-list{
    padding-left: 0;
}
.order-list .item {
    position: relative;
    margin-bottom: 5px;
    
}
.order-list .item .detail{
    margin-left: 140px;
}
.order-list .item .shop-ctrl{
    background: #f60;
    position: absolute;
    right: 0px;
    top: 0;
    width: 50px;
    text-align: center;
    height: 100%;
    line-height: 110px;
    color: #fff;
}
.order-list .item .shop-ctrl~.detail{
    padding-right: 45px;
}
.order-list .item .name{
    white-space: nowrap;
    height: auto;
    width: 100%;
    overflow: hidden
}
.order-list .item .infor{
    height: auto;
    margin-top: 10px;
    line-height: 32px;
}
.order-list .item .change-num{
    float: right;
    background: #f1f1f1;
    padding: 2px 10px;
    line-height: 26px;
}
.order-list .item .change-num input{
    display: inline-block;
    width: 40px;
    margin: 0 5px;
    vertical-align: middle;
    text-align: center
}
.order-list .item .change-num .iconfont{
    color: #000;
}
.bottom-infor checkbox-group{
    float: left;
    margin-left: 5px;
    margin-top: 10px;
}

