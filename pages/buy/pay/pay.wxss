.pay-hd {
    height: 54px;
    line-height: 54px;
    padding: 0 14px;
    background: #fff;
    margin-top: 14px;
    font-size: 16px;
    border-top: 1px solid #ddd;
}

.pay-list {
    background: #fff;
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
}

.pay-list .item {
    display: block;
    margin-left: 14px;
    border-bottom: 1px solid #ddd;
    padding: 12px 0;
}

.pay-list .item:last-child {
    border: none;
}

.pay-list .item .pic {
    float: left;
}

.pay-list .item .pic image {
    width: 30px;
    height: 30px;
    vertical-align: middle;
}

.pay-list .item .text {
    float: left;
    line-height: 30px;
    margin-left: 20px;
}

.pay-list .item radio {
    float: right;
    margin-top: 3px;
}

.back {
    margin: 10px;
}

.payLayer {
    position: fixed;
    width: 100%;
    background: #fff;
    bottom: 0;
    z-index: 99;
}

.password-list {
    display: flex;
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
    background: #fff;
    width: 100%;
    height: 40px;
    line-height: 40px;
}
.password-list view {
    flex: 1;
    text-align: center;
    border-right: 1px solid #ddd;
}
.password-list view:last-child {
    border: none;
}

.keyboard{
    display: flex;
    flex-wrap: wrap;
    margin-top: 10px;
}
.keyboard view{
    box-sizing: border-box;
    width: 33.3%;
    height:50px;
    line-height: 50px;
    text-align: center;
    border-right: 1px solid #ddd;
    border-top: 1px solid #ddd;
    background: #fff;
    
}
.payLayer-cover{
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .6)
}