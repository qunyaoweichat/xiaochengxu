page{
    background: #fff;
}

.coupon-list {
    margin: 15px;
}
.coupon-list .item{
    position: relative;
    margin-bottom: 10px;
    padding: 10px 0;
}
.coupon-list image{
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
}
.coupon-list .content{
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
}
.coupon-list .content .c1{
    width: 95px;
    padding: 0 10px;
    text-align: center;
}
.coupon-list .content .c1 .price{
    font-size: 20px;
}
.coupon-list .content .c1 .price text{
    font-size: 40px;
    vertical-align: -5px;
}
.coupon-list .content .c1 .desc{
    font-size: 12px;
}
.coupon-list .content .c2{
    padding-left: 10px;
    border-left: 1px dotted #999;
}
.coupon-list .content .c2 view{
    white-space: nowrap;
    overflow: hidden;
    line-height: 24px;
    color: #666;
    font-size: 12px;
}
.coupon-list .content .c2 .r1{
    font-size: 20px;
}