/* 删除弹出框 */
.del-layer{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.5); 
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}
.del-layer .inner{
    width: 100%;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 2000;
    background: #fff;
    padding-top: 20rpx;
}
.del-layer .inner .box{
    padding:0 15px;
}
.del-layer .inner .box .title{
    color: #666;
    line-height: 35px;
}
.del-layer .inner .box input{
    padding: 0 10px;
    height: 35px;
    line-height: 35px;
}

.del-layer input{
    border: 1px solid #ddd;
   
}

